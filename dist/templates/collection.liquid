<div id="collection-page">
    <h1>{{ collection.title }}</h1>
    {{ collection.all_products_count }} total products in this collection
    <select class="input--dropdown">
        <option disabled="disabled" selected="selected" value="">Sort</option> 
        <option>Newest Arrival</option>
        <option>A - Z</option>
        <option>Z - A</option>
        <option>Price Low to High</option>
        <option>Price High to Low</option>
    </select>
    <div class="collection-grid">
        {%- for product in collection.products -%}
            <div class="product-card" href="{{ product.url | within: collection }}">
                <img class="product-image" src="{{ product.featured_image.src | img_url: '1024x' }}" alt="">
                {{ product.title }}
                <p>
                    {% if product.available %}
                        {%- if product.price_varies -%}
                            <span class="visuallyhidden">Starting at</span> {{ product.price_min | money_without_trailing_zeros }}
                        {%- else -%}
                            {{ product.price | money_without_trailing_zeros }}
                        {%- endif -%}
                    {% else %}
                        <span class="product-sold_out">Out of stock</span>
                    {% endif %}
                </p>
                <ul class="product-color">
                    {% for color_option in product.options_by_name['Color'].values %}
                        <li class="color-swatch {{ color_option | handleize | prepend: 'collection-'}} {% if product_option.selected_value == value %}active{% endif %}"}>
                        </li>
                    {% endfor %}
                </ul>


                <ul>
                    {% for product_option in product.options_with_values %}
                      <li>{{ product_option.position }} - {{ product_option.name }} </li>
                    {% endfor %}
                  </ul>
          </div>
      {%- endfor -%}
  </div>
</div>